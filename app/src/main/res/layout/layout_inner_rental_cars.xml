<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

         <!-- Cars -->
        <ImageView
            android:id="@+id/car_type"
            android:layout_width="360dp"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Description -->
        <ImageView
            android:id="@+id/car_type_desc"
            android:layout_width="360dp"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-50dp"/>

        <!-- Details -->
        <ImageView
            android:id="@+id/car_type_details"
            android:layout_width="360dp"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-70dp"/>

        <!-- Read reviews & Booking -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardElevation="6dp"
            app:contentPadding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/read_reviews_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#78849E"
                    android:text="Read reviews"/>
                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/book_car_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#3ACCE1"
                    android:textColor="#fff"
                    android:text="Book"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>